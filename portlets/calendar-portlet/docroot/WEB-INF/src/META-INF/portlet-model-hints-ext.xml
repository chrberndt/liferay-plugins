<?xml version="1.0"?>

<model-hints>
	<model name="com.liferay.calendar.model.CalendarNotificationTemplate">
		<field name="fromName" type="String" />
		<field name="fromAddress" type="String">
			<validator name="email" />
			<validator name="required" />
		</field>
	</model>
	<!-- Start custom hints -->
	<model name="com.liferay.calendar.model.CalendarBooking">
		<field name="title" type="String" localized="true" >
			<hint name="display-width">250</hint>
			<hint name="max-length">255</hint>
		</field>
	</model>
	<!-- End custom hints -->
</model-hints>